// Bai 3
#include <stdio.h>
#include <conio.h>

void ptbn(int a, int b);
void ptbn(int a, int b){
	if(a==0){
		if(b==0){
			printf("Phuong trinh co vo so nghiem.");
		}
		else{
			printf("Phuong trinh vo nghiem.");
		}
	}
	else{
		if(b==0){
			printf("Phuong trinh co nghiem la: 0");
		}
		else
		{
			float x=-(float)b/(float)a;
			printf("Phuong trinh co nghiem la: %f", x);
		}
		
	}
}

int main(){
	int a,b;
	printf("Phuong trinh bac nhat ax+b=0, nhap a va b lien tiep: ");
	scanf("%d%d", &a, &b);
	ptbn(a,b);
	getch();
	return 0;
}
